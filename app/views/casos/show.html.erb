<%- model_class = Caso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            Dados do Cliente
            <%= link_to "Mais detalhes", cliente_path(@caso.cliente), :class => 'btn btn-default btn-xs pull-right'%>
          </h3>
        </div>
        <!-- Detalhes do Cliente -->
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              <strong>Nome:</strong>
              <%= @caso.cliente.nome %>
            </li>
            <li class="list-group-item">
              <strong>Nome da Mãe:</strong>
              <%= @caso.cliente.nome_da_mae %>
            </li>
            <li class="list-group-item">
              <strong>CPF:</strong>
              <%= @caso.cliente.cpf %>
            </li>
            <li class="list-group-item">
              <strong>RG:</strong>
              <%= @caso.cliente.rg %>
            </li>
            <li class="list-group-item">
              <strong>Cor:</strong>
              <%= @caso.cliente.cor %>
            </li>
            <li class="list-group-item">
              <strong>Identidade de Gênero:</strong>
              <%= @caso.cliente.identidade_de_genero %>
            </li>
          </ul>
        </div>
      </div>
      <!-- Descrição do Caso -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            Descrição do Caso
          </h3>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              <strong>Criado em:</strong>
              <%= @caso.created_at.strftime("%d/%m/%Y")%>
            </li>
            <li class="list-group-item">
              <strong>Status:</strong>
              <%= @caso.status %>
            </li>
          </ul>
        </div>
      </div>
      <!-- Relatos -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            Relatos
          </h3>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <% @caso.relatos.each_with_index do |relato, index| %>
              <li class="list-group-item">
                <strong><%= index+1 %> Relato:</strong>
                <%= relato.description %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    casos_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_caso_path(@caso), :class => 'btn btn-default' %>
      <hr>
    </div><!-- /col-md-8-->
  </div><!-- /row -->
</div><!-- /container-fluid -->
