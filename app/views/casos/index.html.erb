<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Lista de Espera</h1>
  <div class="row">

  <br><br><br><br><br>
  <table class = "table table-bordered table-striped col-md-12">
  <div id="accordion" role="tablist" aria-multiselectable="false">
  <% @casos.each do |caso| %>
    <tr><td>
      <div role="tab" id="heading<%= caso.id %>">
        <h5>
          <div data-toggle="collapse" data-parent="#accordion" href="#collapse<%= caso.id %>" aria-expanded="false" aria-controls="collapse<%= caso.id %>" style="cursor: pointer;">
            <div class="row">
              <div class = "col-md-8 col-sm-8"><%= caso.cliente.nome%></div>
              <div class = "col-md-2 col-sm-2 text-right"><%= caso.created_at.strftime("%H:%M") %></div>
              <div class = "col-md-2 col-sm-2 text-right"><span class="badge"><%= caso.type_description %></span></div>
            </div>
          </div>
        </h5>
      </div>
      <div id="collapse<%= caso.id %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= caso.id %>">
        <div class="panel-body">
          <% Relato.where(:caso => caso).each do |relato| %>
            <%= relato.description %>
            <%= link_to 'Escolher', select_case_path(caso.id), :class => "btn-info btn-xs pull-right"%>
          <% end %>
        </div>
      </div>
    </td></tr>
  <% end %>
  </div>
  </table>
  </div>
</div>
