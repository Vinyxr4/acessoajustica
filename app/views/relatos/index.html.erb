<p id="notice"><%= notice %></p>

<h1>Listing Relatos</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Atendimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relatos.each do |relato| %>
      <tr>
        <td><%= relato.description %></td>
        <td><%= relato.atendimento %></td>
        <td><%= link_to 'Show', relato %></td>
        <td><%= link_to 'Edit', edit_relato_path(relato) %></td>
        <td><%= link_to 'Destroy', relato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

