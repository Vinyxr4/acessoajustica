<!DOCTYPE html>
<html>
<head>
  <title>Acesso à justiça</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>
<p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
<p class="alert alert-danger"><%= alert %></p>
<% end %>

<% if user_signed_in? %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bem vindo, <strong><%= current_user.username.humanize %></strong>!</a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", '/' %></li>
        <li><%= link_to 'Modificar Perfil', edit_user_registration_path %></li>
        <% if can? :create, current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Usuários<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Cadastrar Usuário", new_user_registration_path %> </li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Lista de Estagiários", estagiarios_path %></li>
              <li><%= link_to "Lista de Calouros", calouros_path %></li>
              <li><%= link_to "Lista de Vareiros", vareiros_path %></li>
            </ul>
          </li>
        <% end %>
        <% if can? :create, Cliente %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Clientes<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Cadastrar Cliente", new_cliente_path %> </li>
              <li><%= link_to "Lista de Clientes", clientes_path %> </li>
              <li><%= link_to "Buscar Cliente", search_clientes_path %> </li>
            </ul>
          </li>
        <% end %>
        <% if current_user.role?("estagiário") %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Atendimentos<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Meus Atendimentos", "/casos/my-cases" %></li>
              <li><%= link_to "Lista de Espera", casos_path %> </li>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<% elsif current_page?('/users/sign_in') == false %>

  <ul class="nav nav-pills navbar-right" style="margin:10px;">
    <li role="presentation" class="active">
      <%= link_to "Entrar", new_user_session_path %>
    </li>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
