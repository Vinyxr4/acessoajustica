<%= form_for @cliente, :html => { :class => " cliente" } do |f| %>

    <% if @cliente.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cliente.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="container-fluid">

    <div class="row">
      <div class = "col-md-8 col-md-offset-2">
        <!-- Panel - Dados para Cadastro do Cliente -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><strong>Dados para Cadastro do Cliente</strong></h3>
          </div>
          <div class="panel-body">
            <%= render :partial => 'pessoas/fields', :locals => { :f => f, :@pessoa => @cliente} %>
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :telefone, "Telefone", :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :telefone, :class => 'form-control telefone' %>
                </div>
                <%= error_span(@cliente[:telefone]) %>
              </div>
            </div>
          </div>
        </div>
        <!-- Panel - Endereço -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Endereço</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :cep, "CEP", :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :cep, :class =>'form-control cep' %>
                </div>
                <%= error_span(@cliente[:cep]) %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :estado, "Estado", :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :estado, :class => "form-control" %>
                </div>
                <%= error_span(@cliente[:estado]) %>
              </div>
            </div><!-- /row -->
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :cidade, "Cidade", :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :cidade, :class => "form-control" %>
                </div>
                <%= error_span(@cliente[:cidade]) %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :bairro, "Bairro", :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :bairro, :class => "form-control" %>
                </div>
                <%= error_span(@cliente[:bairro]) %>
              </div>
            </div><!-- /row -->
            <div class="row">
              <div class="form-group col-md-2">
                <%= f.label :moradia_type_id, "Logradouro", :class => 'control-label' %>
                <div class="controls">
                  <%= f.select :moradia_type_id, MoradiaType.all.collect {|desc| [desc.description.capitalize, desc.id]}, {}, {:class => 'form-control'} %>
                </div>
                <%= error_span(@cliente[:moradia_type_id]) %>
              </div>
              <div class="form-group col-md-10">
                <%= f.label :endereco, "Endereço", :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :endereco, :class => "form-control" %>
                </div>
                <%= error_span(@cliente[:endereco]) %>
              </div>
            </div><!-- /row -->
          </div>
        </div>
        <!-- Painel - Triagem -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><strong>Triagem</strong></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :estado_civil_id, "Estado Civil", :class => 'control-label' %>
                <div class="controls">
                  <%= f.select :estado_civil_id, EstadoCivil.all.collect {|civil_status| [civil_status.description.capitalize, civil_status.id]}, {}, {:class => 'form-control'} %>
                </div>
                <%= error_span(@cliente[:estado_civil_id]) %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :tem_filhos, "Filhos", :class => 'control-label' %>
                <div class="controls">
                  <%= radio_button_tag(:filhos, "sim") %>
                  <%= label_tag(:filhos_sim, "Sim") %>
                  <%= radio_button_tag(:filhos, "nao") %>
                  <%= label_tag(:filhos_nao, "Não") %>
                </div>
                <%= error_span(@cliente[:tem_filhos]) %>
              </div>
            </div><!-- /row -->
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :estado_civil_id, "Estado Civil", :class => 'control-label' %>
                <div class="controls">
                  <%= f.select :estado_civil_id, EstadoCivil.all.collect {|civil_status| [civil_status.description.capitalize, civil_status.id]}, {}, {:class => 'form-control'} %>
                </div>
                <%= error_span(@cliente[:estado_civil_id]) %>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :tem_filhos, "Filhos", :class => 'control-label' %>
                <div class="controls">
                  <%= radio_button_tag(:filhos, "sim") %>
                  <%= label_tag(:filhos_sim, "Sim") %>
                  <%= radio_button_tag(:filhos, "nao") %>
                  <%= label_tag(:filhos_nao, "Não") %>
                </div>
                <%= error_span(@cliente[:tem_filhos]) %>
              </div>
            </div><!-- /row -->
          </div>
        </div>



        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Dados Familiares</h3>
          </div>
          <div class="panel-body">

            <div class="row">
              <div class="form-group col-md-6 col-sm-6">
                <%= f.label :renda_total, :class => 'control-label' %>
                <div class="controls">
                  <%= f.number_field :familia_renda, :class => 'form-control', :min => 0 %>
                </div>
                <%= error_span(@cliente[:familia_renda]) %>
              </div>

              <div class="form-group col-md-6 col-sm-6">
                <%= f.label :quantidade_total_de_pessoas, :class => 'control-label' %>
                <div class="controls">
                  <%= f.number_field :familia_quantidade, :class => 'form-control', :min => 0 %>
                </div>
                <%= error_span(@cliente[:familia_quantidade]) %>
              </div>
            </div>

            <div class = "row">

              <div class="form-group col-md-6 col-sm-6">
                <%= f.label :contribuintes_quantidade, :class => 'control-label' %>
                <div class="controls">
                  <%= f.number_field :contribuintes_quantidade, :class => 'form-control', :min => 0 %>
                </div>
                <%= error_span(@cliente[:contribuintes_quantidade]) %>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Dados Profissionais</h3>
          </div>
          <div class="panel-body row">
            <div class="form-group col-md-6 col-sm-6">
              <%= f.label :profissão, :class => 'control-label' %>
              <div class="controls">
                <%= f.text_field :profissao_nome, :class => 'form-control' %>
              </div>
              <%= error_span(@cliente[:profissao_nome]) %>
            </div>
            <div class="form-group col-md-6 col-sm-6">
              <%= f.label :categoria, :class => 'control-label' %>
              <div class="controls">
                <%= f.select :profissao_type_id, ProfissaoType.all.collect {|profession| [profession.description.capitalize, profession.id]}, {}, {:class => 'form-control'} %>
              </div>
              <%= error_span(@cliente[:profissao_type_id]) %>
            </div>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Relato inicial</h3>
          </div>
          <div class="panel-body row">
            <div class="form-group col-md-12 col-sm-12">
              <div class="controls">
                <%= f.fields_for @relato do |r| %>
                  <%= r.text_area :description,  {:class => 'form-control', :rows => 7 } %>
                <% end %>
              </div>
              <%= error_span(@cliente[:relato]) %>
            </div>
            <div class="form-group col-md-12 col-sm-12">
              <%= f.label :categoria, :class => 'control-label' %>
              <div class="controls">
                <%= f.fields_for @caso do |c| %>
                  <%= c.select :status, options_for_select([['Aprovado', true], ['Não aprovado', false]]), {:include_blank => true}, {:class => 'form-control'} %>
                  <%# <%= render 'question_fields', f: builder %>
                <% end %>
              </div>
              <%= error_span(@caso[:status]) %>
            </div>
          </div>
        </div>

        <div class="text-right">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    clientes_path, :class => 'btn btn-default' %>
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </div>
        <hr>
      </div>
    </div>
  </div>

<% end %>
