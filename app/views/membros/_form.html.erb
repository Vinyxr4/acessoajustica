<%= form_for @membro, :html => { :class => "form-horizontal membro" } do |f| %>

    <%= render :partial => 'pessoas/fields', :locals => { :f => f } %>

    <% if @membro.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@membro.errors.count, "error") %> prohibited this membro from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @membro.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :ano_faculdade, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :ano_faculdade, :class => 'form-control' %>
    </div>
    <%= error_span(@membro[:ano_faculdade]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            membros_path, :class => 'btn btn-default' %>

<% end %>
