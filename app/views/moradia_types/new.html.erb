
<%= form_for @moradia_type, :html => { :class => "form-horizontal pessoa" } do |f| %>
  <div class="container">
    <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= f.label "Tipos de Moradia" %>
            <%= f.text_field :description  %>
            <%= f.submit nil , :class => 'btn btn-default' %>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            moradia_types_path, :class => 'btn btn-default' %>
          </div>
    </div>
  </div>
<% end %>
